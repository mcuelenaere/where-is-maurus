{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "matchPackageNames": [
        "/^@types//",
        "/^eslint/",
        "/^@eslint/",
        "/^prettier/",
        "/^typescript-eslint/",
        "/^typescript/",
        "/^vite/",
        "/^@vitejs/",
        "/@lingui/vite-plugin/"
      ]
    },
    {
      "matchPackageNames": [
        "typescript",
        "eslint",
        "prettier",
        "vite"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
